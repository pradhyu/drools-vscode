{
    "comments": {
        "lineComment": "//",
        "blockComment": ["/*", "*/"]
    },
    "brackets": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"]
    ],
    "autoClosingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""],
        ["'", "'"]
    ],
    "surroundingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""],
        ["'", "'"]
    ],
    "indentationRules": {
        "increaseIndentPattern": "^\\s*(rule\\s+|when\\s*$|then\\s*$|function\\s+|.*\\{[^}\"'`]*$|.*\\([^)\"'`]*$|.*\\[[^\\]\"'`]*$|\\s*(exists|not|eval|forall|collect|accumulate)\\s*\\([^)]*$)",
        "decreaseIndentPattern": "^\\s*(end\\s*$|\\s*\\}\\s*$|\\s*\\)\\s*$|\\s*\\]\\s*$)"
    },
    "onEnterRules": [
        {
            "beforeText": "^\\s*(exists|not|eval|forall|collect|accumulate)\\s*\\([^)]*$",
            "action": {
                "indent": "indent"
            }
        },
        {
            "beforeText": "^\\s*[^()]*\\([^)]*$",
            "afterText": "^\\s*\\)",
            "action": {
                "indent": "indent"
            }
        },
        {
            "beforeText": "^\\s*(when|then)\\s*$",
            "action": {
                "indent": "indent"
            }
        }
    ],
    "folding": {
        "markers": {
            "start": "^\\s*//\\s*#?region\\b",
            "end": "^\\s*//\\s*#?endregion\\b"
        },
        "offSide": true
    },
    "wordPattern": "(-?\\d*\\.\\d\\w*)|([^\\`\\~\\!\\@\\#\\%\\^\\&\\*\\(\\)\\-\\=\\+\\[\\{\\]\\}\\\\\\|\\;\\:\\'\\\"\\,\\.\\<\\>\\/\\?\\s]+)"
}