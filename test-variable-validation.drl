rule "Example of backward chaining rules"
dialect "java"
when
    $m : Message( status == Message.GOODBYE, message : message )
    $l : String( this == "Hello World" )
then
    System.out.println( message );
    System.out.println( $l );
end

rule "Multi-line Pattern Variable Test"
when
    $customer : Customer(status == "ACTIVE")
    exists(
        $order : Order(
            customer == $customer,
            total > 100
        )
    )
then
    System.out.println("Customer: " + $customer.getName());
    System.out.println("Order found: " + $order.getId());
end

rule "Complex Multi-line Pattern"
when
    $person : Person(age > 18)
    $orders : List() from collect(
        Order(
            customer == $person,
            status == "PENDING"
        )
    )
    eval($orders.size() > 0)
then
    System.out.println("Person: " + $person.getName());
    System.out.println("Orders count: " + $orders.size());
end