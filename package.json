{
  "name": "drools-vscode-extension",
  "displayName": "Drools Language Support",
  "description": "Comprehensive syntax highlighting and editing support for Drools Rule Language (.drl) files",
  "version": "0.1.0",
  "publisher": "drools-community",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets",
    "Formatters",
    "Linters"
  ],
  "keywords": [
    "drools",
    "rules",
    "business rules",
    "drl",
    "syntax highlighting"
  ],
  "activationEvents": [
    "onLanguage:drools"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "drools",
        "aliases": ["Drools", "drools", "DRL"],
        "extensions": [".drl"],
        "configuration": "./language-configuration.json",
        "mimetypes": ["text/x-drools"]
      }
    ],
    "grammars": [
      {
        "language": "drools",
        "scopeName": "source.drools",
        "path": "./syntaxes/drools.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "drools.setLanguage",
        "title": "Set Language to Drools",
        "category": "Drools"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Drools",
      "properties": {
        "drools.formatOnSave": {
          "type": "boolean",
          "default": true,
          "description": "Automatically format .drl files when saving"
        },
        "drools.maxNumberOfProblems": {
          "type": "number",
          "default": 1000,
          "description": "Maximum number of problems to report"
        },
        "drools.enableDiagnostics": {
          "type": "boolean",
          "default": true,
          "description": "Enable diagnostic reporting for syntax and semantic errors"
        },
        "drools.enableCompletion": {
          "type": "boolean",
          "default": true,
          "description": "Enable code completion and IntelliSense features"
        },
        "drools.enableSyntaxValidation": {
          "type": "boolean",
          "default": true,
          "description": "Enable syntax validation"
        },
        "drools.enableSemanticValidation": {
          "type": "boolean",
          "default": true,
          "description": "Enable semantic validation"
        },
        "drools.enableBestPracticeWarnings": {
          "type": "boolean",
          "default": true,
          "description": "Enable best practice warnings"
        },
        "drools.enableKeywordCompletion": {
          "type": "boolean",
          "default": true,
          "description": "Enable keyword completion"
        },
        "drools.enableFactTypeCompletion": {
          "type": "boolean",
          "default": true,
          "description": "Enable fact type completion"
        },
        "drools.enableFunctionCompletion": {
          "type": "boolean",
          "default": true,
          "description": "Enable function completion"
        },
        "drools.enableVariableCompletion": {
          "type": "boolean",
          "default": true,
          "description": "Enable variable completion"
        },
        "drools.maxCompletionItems": {
          "type": "number",
          "default": 50,
          "description": "Maximum number of completion items to show"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package",
    "webpack": "webpack --mode development",
    "webpack-dev": "webpack --mode development --watch",
    "webpack-prod": "webpack --mode production"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "typescript": "^4.9.4",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1",
    "ts-loader": "^9.4.1",
    "@vscode/test-electron": "^2.2.0",
    "vsce": "^2.15.0"
  },
  "dependencies": {
    "vscode-languageclient": "^8.0.2",
    "vscode-languageserver": "^8.0.2",
    "vscode-languageserver-textdocument": "^1.0.7"
  }
}